<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:id="@+id/ivItemRecipe"
            android:contentDescription="Imageview"
            android:src="@drawable/img_shrimp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:text="Garlic Butter Shrimp"
            android:maxLines="2"
            android:maxLength="20"
            android:ellipsize="end"
            android:id="@+id/tvItemNameRecipe"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_below="@+id/ivItemRecipe"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/breakfast"
            android:textSize="10sp"
            android:layout_marginTop="4dp"
            android:id="@+id/tvItemMenu"
            android:layout_below="@+id/tvItemNameRecipe"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="1 .2.K"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_below="@+id/tvItemNameRecipe"
            android:layout_alignParentEnd="true"
            android:id="@+id/tvNumberRecipe"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cooked"
            android:textSize="10sp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tvNumberRecipe"
            android:id="@+id/tvCooked"/>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>